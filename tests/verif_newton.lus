/* main = incr */
node newton (tic: bool) = (out:int; t: int)
with var cpt : int; ok: bool in
  cpt = 1 fby (cpt + 1);
out = 0 fby (out + cpt);
ok = (cpt * (cpt - 1) = 2*out);
t = (cpt-1) * (cpt)/2

